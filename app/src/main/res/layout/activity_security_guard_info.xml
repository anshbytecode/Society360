<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Guard Information"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/guardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Ramesh Sharma"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/guardLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Gate No. 1"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/guardContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: +91 9876543210"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

</LinearLayout>